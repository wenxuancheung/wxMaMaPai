page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
 border-bottom: 1rpx #DCDCDC solid;
} 
.navbar .item{ 
 font-size: 28rpx;
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 80rpx; 

} 
.navbar .item.active{ 
 color: #FFCC00; 
 text-decoration: underline;
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
}
